# Transit Oracle - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# Amplitude Analytics
# =============================================================================
AMPLITUDE_API_KEY=your_amplitude_api_key_here

# =============================================================================
# TTC GTFS-RT Feeds
# =============================================================================
TTC_GTFS_RT_URL=https://opendata.toronto.ca/TTC/realtime/VehiclePositions.pb
TTC_TRIP_UPDATES_URL=https://opendata.toronto.ca/TTC/realtime/TripUpdates.pb

# =============================================================================
# Backboard.io (LLM Orchestration)
# =============================================================================
BACKBOARD_API_KEY=your_backboard_api_key_here

# =============================================================================
# MongoDB Atlas (Optional - Black Box Logging)
# =============================================================================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/transit_oracle

# =============================================================================
# ElevenLabs (Optional - Audio Alerts)
# =============================================================================
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# =============================================================================
# 1Password Service Account (Optional)
# =============================================================================
# If using 1Password for secrets management
OP_SERVICE_ACCOUNT_TOKEN=your_1password_service_account_token

# =============================================================================
# Data Paths
# =============================================================================
TRAFFIC_SIGNALS_PATH=data/traffic_signals/traffic_signals.shp
GTFS_STATIC_PATH=data/gtfs_static
TAPE_DELAY_PATH=data/tape_delay/recorded_positions.json

# =============================================================================
# Server Configuration
# =============================================================================
FLASK_ENV=development
FLASK_DEBUG=1
PORT=5000
